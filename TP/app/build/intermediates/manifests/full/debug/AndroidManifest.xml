<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bhouts.taskplanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="TP"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bhouts.taskplanner.HomeScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bhouts.taskplanner.ditTask"
            android:label="@string/title_activity_dit_task"
            android:parentActivityName="com.example.bhouts.taskplanner.HomeScreen"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhouts.taskplanner.HomeScreen" />
        </activity>
        <activity
            android:name="com.example.bhouts.taskplanner.editProject"
            android:label="@string/title_activity_edit_project"
            android:parentActivityName="com.example.bhouts.taskplanner.HomeScreen"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhouts.taskplanner.HomeScreen" />
        </activity>
        <activity
            android:name="com.example.bhouts.taskplanner.Dump"
            android:label="@string/title_activity_dump"
            android:parentActivityName="com.example.bhouts.taskplanner.HomeScreen"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bhouts.taskplanner.HomeScreen" />
        </activity>
    </application>

</manifest>